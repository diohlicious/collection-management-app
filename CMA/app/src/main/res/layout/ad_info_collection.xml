<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/adHdr5"
                android:textColor="@color/green_A900"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/collector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginStart="18dp"
                android:layout_marginTop="45dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/nplDate"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/nplDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="45dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/collector"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/collectorLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adcollector"
                android:layout_marginStart="18dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/collector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/nplDateLbl"/>
            <TextView
                android:id="@+id/nplDateLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adnplDate"
                android:layout_marginEnd="18dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/nplDate"
                app:layout_constraintStart_toEndOf="@id/collectorLbl"
                app:layout_constraintEnd_toEndOf="parent"/>
            <!--new section-->
            <TextView
                android:id="@+id/caseCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginTop="6dp"
                android:layout_marginStart="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/collectorLbl"
                app:layout_constraintEnd_toStartOf="@+id/woDate"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/woDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/nplDateLbl"
                app:layout_constraintStart_toEndOf="@+id/caseCategory"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/caseCategoryLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adcaseCategory"
                android:layout_marginStart="18dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/caseCategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/woDateLbl"/>
            <TextView
                android:id="@+id/woDateLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adwoDate"
                android:layout_marginEnd="18dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/woDate"
                app:layout_constraintStart_toEndOf="@id/caseCategoryLbl"
                app:layout_constraintEnd_toEndOf="parent"/>
            <!--new section-->
            <TextView
                android:id="@+id/ralNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/caseCategoryLbl"
                app:layout_constraintEnd_toStartOf="@+id/pinalty"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/ralNoLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adralNo"
                android:layout_marginStart="18dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/ralNo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <!--new section-->
            <TextView
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:text="@string/dash"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ralNoLbl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/notesLbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/adnotes"
                android:layout_marginStart="18dp"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/notes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <!--new section-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>