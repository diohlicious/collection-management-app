<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 tools:context=".fav.partner.PartnerListFragment">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="9dp"
                app:cardElevation="3dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp">

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:id="@+id/phtMitra"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:tag="photoMitra"
                                    app:srcCompat="@drawable/ic_person" />

                        </FrameLayout>


                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="3dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/nameMitra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="nameMitra"
                            android:text="Octavian Nur Fajar"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/idMitra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="idMitra"
                            android:text="374357000000002"
                            android:textSize="12sp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/typeMitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="typeMitra"
                                android:text="Personal"
                                android:textSize="12sp" />

                        <TextView
                                android:id="@+id/handlingMitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="handlingMitra"
                                android:text="Matel"
                                android:textSize="12sp" />

                        <TextView
                                android:id="@+id/specMitra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="specMitra"
                                android:text="LSM"
                                android:textSize="12sp" />

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>