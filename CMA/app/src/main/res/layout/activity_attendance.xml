<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/green_600"
            app:cardCornerRadius="9dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="9dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Mon, 20 January 2020"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextClock
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:format24Hour="kk:mm:ss"
                        android:format12Hour="@null"
                        android:timeZone="GMT+0700"
                        android:gravity="center"
                        android:text="12:25:00"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        app:layout_constraintTop_toBottomOf="@+id/date"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="12dp"
                        android:text="@string/clock_in"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/time"/>
                    <TextView
                        android:id="@+id/clockin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="12dp"
                        android:text="--:--:--"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="end"
                        app:layout_constraintTop_toBottomOf="@+id/time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:text="@string/clock_out"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/clockin"
                        app:layout_constraintEnd_toStartOf="@id/clockout"/>
                    <TextView
                        android:id="@+id/clockout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:text="--:--:--"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="end"
                        app:layout_constraintTop_toBottomOf="@+id/clockin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <Chronometer
                        android:id="@+id/worktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:format="H:MM:SS"
                        android:textColor="@color/green_A900"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/clockout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <Button
                        android:id="@+id/btnclockin"
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/clock_in"
                        android:drawableTop="@drawable/clockin"
                        android:textSize="20sp"
                        android:paddingTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/worktime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnclockout"/>
                    <Button
                        android:id="@+id/btnclockout"
                        style="@style/AppTheme.RoundedCornerMaterialButton"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/clock_out"
                        android:textSize="20sp"
                        android:drawableTop="@drawable/clockout"
                        android:paddingTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/worktime"
                        app:layout_constraintStart_toEndOf="@id/btnclockin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/imgTakeot"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:cardBackgroundColor="@color/grey_200"
            app:cardCornerRadius="110dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/take_photo"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgTake"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>